<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
   <li><% if task.completed then %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    &nbsp;&nbsp;
    <%= link_to task.title, task_path(task.id) %>
    </li>
  <% end %>
</ul>
<hr>
<%= link_to "+ Add a new task", tasks_new_path %>
