<h1><%= @task.title %></h1>
<%= link_to "Edit this task", task_edit_path %>
<div class="details">
  <%= @task.details %>
</div>
<hr>
<% if @task.completed then %>
  <i class="far fa-check-square"></i> This task ist completed
<% else %>
  <i class="far fa-square"></i> This task is not completed yet
<% end %>
<%= link_to "Back to list", tasks_path  %>
